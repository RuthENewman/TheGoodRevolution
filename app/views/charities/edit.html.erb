<h1>Edit <% @charity.name %></h1>

<%= form_for @charity do |f| %>
  <div class="field">
    <p><%= f.label :name %></p>
    <%= f.text_field :name %>
    </div>
    <br>
    <div class="field">
    <p><%= f.label :category %></p>
    <%= f.text_field :category %>
    </div>
    <br>
    <div class="field">
    <p><%= f.label :bio, "Description" %></p>
    <%= f.text_area :bio %>
    </div>
    <br>
    <div class="field">
    <p><%= f.label :img_url, "Add an image URL" %></p>
    <%= f.text_field :img_url %>
    </div>
    <br>
    <div class="action">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back to all charities', charities_path %>
