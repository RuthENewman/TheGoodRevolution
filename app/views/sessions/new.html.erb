<h1 class="header">Log in</h1>
<br>
<div class="card">
  <div class="card-body">
<%= form_tag sessions_path do %>
<br>
  <div id="login-form">
  <div class="field">
 <p><%= label_tag :email %></p>
 <p><%= text_field_tag :email, 'Your email address', :size => 32 %></p>
 </div>
 <div class="field">
 <p><%= label_tag :password %></p>
 <%= password_field_tag :password, 'Your password', :size => 36 %>
 </div>
<br>
<br>
  <div class="action">
 <%= submit_tag "Log in", :class => "btn btn-default btn-lg" %>
 <br>
 </div>
<% end %>
</div>
</div>
</div>
<br>
<br>
<p><%= link_to 'Home', welcome_path %></p>
